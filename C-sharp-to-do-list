using System.Collections.Generics;

namespace to-do list
{
    class Program
    {
        static void Main(string[] args)
        {
            List<String> items = new List<String>();
            items.Add(fruits);
            items.Add(veggies);
            items.Add(shampoo);
            items.Add(Books);
            items.Add(pencils);
            items.Add(erasers);

            Console.WriteLine("I've made a to-do list showing a list of items needed, here it is currently:");
            Console.WriteLine(items);
            Console.WriteLine("How about you add something. If you don't want to just type Done.");
            String thing = Console.ReadLine();
            
            while(thing != Done)
            {

                items.Add(thing);
                Console.WriteLine("Here's the new list:");
                Console.WriteLine(items);
                Console.WriteLine("Add another item into the list if you'd like to. If you don't want to just type Done.");
                String thing = console.ReadLine();
            }

            Console.WriteLine("Your list is done. Bye!"); 
            
        }
    }
}
